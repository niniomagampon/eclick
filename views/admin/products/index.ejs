<%- include('../layout/layout') -%>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
    <li class="breadcrumb-item active" aria-current="page">Products</li>
  </ol>
</nav>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div class="d-flex justify-content-between">
      <h1 class="h3 text-gray-800">Products</h1>
      <a href="/admin/products/create"
        ><button type="button" class="btn btn-primary btn-sm">
          Create Product
        </button></a
      >
    </div>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Image</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for (const product of products) { %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= product.category.name %></td>
            <td>
              <img class="img-fluid" src="<%= product.image %>" alt="<%= product.name %>" />
            </td>
            <td><%= product.qty %></td>
            <td>â‚±<%= product.price %></td>
            <td>
              <% if (product.deletedAt == null) {%>
              <a href="/admin/products/edit/<%= product.id %>">
                <i class="text-warning fas fa-edit"></i>
              </a>
              <a
                href="/admin/products/delete/<%= product.id %>"
                onclick="return confirm('Are you sure you want to delete this product?')"
              >
                <i class="text-danger fas fa-trash-alt"></i>
              </a>
              <% } else {%>
              <a
                href="/admin/products/restore/<%= product.id %>"
                onclick="return confirm('Are you sure you want to retore this product?')"
              >
                <i class="text-info fas fa-trash-restore-alt"></i>
              </a>
              <%}%>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    $("#dataTable").DataTable({
      ordering: false,
    });
  });
</script>

<%- include('../layout/footer') -%>
