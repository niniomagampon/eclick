<%- include('../layout/layout') -%>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="/admin/users">Users</a></li>
    <li class="breadcrumb-item active" aria-current="page">Update</li>
  </ol>
</nav>

<div class="d-flex justify-content-center">
  <div class="card border-left-primary shadow h-100 w-50 py-2">
    <div class="card-body">
      <% if (typeof isSuccess != 'undefined' && isSuccess) { %>
      <div class="alert alert-primary" role="alert">
        Successfully updated account.
      </div>
      <% } else if (typeof isSuccess != 'undefined' && !isSuccess) { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% for (const error of errors) { %>
          <li><%= error %></li>
          <% } %>
        </ul>
      </div>
      <% } %>

      <form method="POST" action="/admin/users/edit">
        <div class="form-group">
          <input type="hidden" value="<%= id %>" name="id" />
          <label for="userName"
            >Account Name <span class="text-danger">*</span></label
          >
          <input
            type="text"
            class="form-control"
            id="userName"
            placeholder="Name"
            name="name"
            value="<%= name %>"
          />
        </div>
        <div class="form-group">
          <label for="userEmail"
            >Email <span class="text-danger">*</span></label
          >
          <input
            type="email"
            class="form-control"
            id="userEmail"
            placeholder="Email Address"
            name="email"
            value="<%= email %>"
          />
        </div>
        <div class="form-group">
          <label for="userMobile"
            >Mobile <span class="text-danger">*</span></label
          >
          <input
            type="mobile"
            class="form-control"
            id="userMobile"
            placeholder="Mobile Number"
            name="mobile"
            value="<%= mobile %>"
          />
        </div>
        <div class="form-group">
          <label for="userType"
            >User Type <span class="text-danger">*</span></label
          >
          <input
            type="userType"
            class="form-control"
            id="userType"
            placeholder="User Type"
            name="userType"
            value="<%= userType %>"
          />
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </div>
  </div>
</div>

<%- include('../layout/footer') -%>
