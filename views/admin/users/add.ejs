<%- include('../layout/layout') -%>
<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
		<li class="breadcrumb-item"><a href="/admin/users">Users</a></li>
		<li class="breadcrumb-item active" aria-current="page">Create</li>
	</ol>
</nav>

<div class="d-flex justify-content-center">
	<div class="card border-left-primary shadow h-100 w-50 py-2">
		<div class="card-body">
			<% if (typeof isSuccess != 'undefined' && isSuccess) { %>
			<div class="alert alert-primary" role="alert">
				Successfully added user.
			</div>
			<% } else if (typeof isSuccess != 'undefined' && !isSuccess) { %>
			<div class="alert alert-danger" role="alert">
				<ul>
					<% for (const error of errors) { %>
					<li><%= error %></li>
					<% } %>
				</ul>
			</div>
			<% } %>

			<form method="POST" action="/admin/users/create">
				<div class="form-group">
					<label for="userName"> Name <span class="text-danger">*</span></label>
					<input
						type="text"
						class="form-control"
						id="userName"
						placeholder="User Name"
						name="name"
						value="<%= (locals.oldValue) ? oldValue.name : '' %>"
					/>
				</div>
				<div class="form-group">
					<label for="userEmail"
						>Email <span class="text-danger">*</span></label
					>
					<input
						type="text"
						class="form-control"
						id="userEmail"
						placeholder="Email Address"
						name="email"
						value="<%= (locals.oldValue) ? oldValue.email : '' %>"
					/>
				</div>
				<div class="form-group">
					<label for="address"
						>Home Address <span class="text-danger">*</span></label
					>
					<input
						type="text"
						class="form-control"
						id="address"
						placeholder="Address"
						name="address"
						value="<%= (locals.oldValue) ? oldValue.address : '' %>"
					/>
				</div>
				<div class="form-group">
					<label for="userMobile"
						>Mobile <span class="text-danger">*</span></label
					>
					<input
						type="number"
						class="form-control"
						id="userMobile"
						placeholder="Mobile"
						name="mobile"
						value="<%= (locals.oldValue) ? oldValue.mobile : '' %>"
					/>
				</div>
				<div class="form-group">
					<label for="userPassword"
						>Password <span class="text-danger">*</span></label
					>
					<input
						type="password"
						class="form-control"
						id="userPassword"
						placeholder="Password"
						name="password"
						value="<%= (locals.oldValue) ? oldValue.password : '' %>"
					/>
				</div>

				<div class="form-group">
					<h6>User Type</h6>
					<input
						type="radio"
						id="userStaffID"
						name="userType"
						value="Staff"
						checked
					/>
					<label for="userStaffID">Staff</label><br />
					<input type="radio" id="userAdminID" name="userType" value="Admin" />
					<label for="userAdminID">Admin</label><br />
				</div>
				<button type="submit" class="btn btn-primary">Add</button>
			</form>
		</div>
	</div>
</div>

<%- include('../layout/footer') -%>
