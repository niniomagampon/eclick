<%- include('../layout/layout') -%>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="/admin/categories">Categories</a></li>
    <li class="breadcrumb-item active" aria-current="page">Update</li>
  </ol>
</nav>

<div class="d-flex justify-content-center">
  <div class="card border-left-primary shadow h-100 w-50 py-2">
    <div class="card-body">
      <% if (typeof isSuccess != 'undefined' && isSuccess) { %>
      <div class="alert alert-primary" role="alert">
        Successfully updated category.
      </div>
      <% } else if (typeof isSuccess != 'undefined' && !isSuccess) { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% for (const error of errors) { %>
          <li><%= error %></li>
          <% } %>
        </ul>
      </div>
      <% } %>

      <form method="POST" action="/admin/categories/edit">
        <div class="form-group">
          <input type="hidden" value="<%= id %>" name="id" />
          <label for="categoryName"
            >Category Name <span class="text-danger">*</span></label
          >
          <input
            type="text"
            class="form-control"
            id="categoryName"
            placeholder="Category Name"
            name="name"
            value="<%= name %>"
          />
        </div>
        <div class="form-group">
          <label for="categorySlug"
            >Slug <span class="text-danger">*</span></label
          >
          <input
            type="text"
            class="form-control"
            id="categorySlug"
            placeholder="Slug"
            name="slug"
            value="<%= slug %>"
          />
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </div>
  </div>
</div>

<%- include('../layout/footer') -%>
