<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>OnClick Grocery</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous" />
  <link rel="stylesheet" href="../css/styles.css" />
</head>

<body class="font-pops">
  <%- include('../header'); -%>
    <div class="
        page-container
        container-fluid
        d-flex
        flex-column
        justify-content-center
      ">
      <div class="row my-5">
        <div class="
            col-xl-6 col-12
            d-flex
            flex-column
            align-items-center
            justify-content-center
            text-start
          ">
          <h6 class="">THINK, CLICK</h6>
          <p class="display-1 mt-1 mb-5 fw-bold">AND PICK</p>
          <a href="/products/all"><button class="btn btn-warning w-auto">Shop Now</button></a>
        </div>
        <div class="
            col-xl-6 col-12
            d-flex
            flex-column
            align-items-center
            justify-content-center
          ">
          <img src="../../img/home-bg.jpg" alt="" class="basket-img mt-5" />
        </div>
      </div>
    </div>
    <!-- JUST FOR YOU -->

    <!-- CATEGORIES -->
    <div class="container-fluid  bg-warning py-3">
      <h5 class="text-center pb-3 text-light fw-bold">Categories</h5>
      <div class=" card">
        <div class="row card-body text-center d-flex m-1">
          <% for (const category of categories) { %>
            <div class="col-12 col-md-6 col-lg-3 card p-2">
              <a href="/products/category/<%= category.slug %>"
                class="d-flex align-items-center justify-content-center">
                <button class="btn">
                  <%= category.name %>
                </button></a>
            </div>
            <% } %>
        </div>
      </div>

      <script></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>
</body>

</html>