<link
  href="/fontawesome-free/css/all.min.css"
  rel="stylesheet"
  type="text/css"
/>
<div
  class="
    top-nav
    bg-warning
    d-flex
    align-items-center
    justify-content-center
    p-2
  "
>
  <p class="fw-bold text-secondary">
    We Ship NATIONWIDE. Free shipping for orders over Php 5,000.
  </p>
</div>
<nav class="navbar navbar-expand-lg navbar-light shadow bg-white w-100">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">
      <img src="../logo.png" alt="" />
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
        <li class="nav-item mx-2">
          <a class="nav-link" aria-current="page" href="/">Home</a>
        </li>
        <li class="nav-item mx-2">
          <a class="nav-link hideonpc" href="/cart">Orders</a>
        </li>
        <li class="nav-item mx-2">
          <a class="nav-link hideonpc" href="#">Wishlist</a>
        </li>
        <li class="nav-item mx-2">
          <a class="nav-link" href="/products/all">Products</a>
        </li>
        <li class="nav-item mx-2">
          <a class="nav-link" href="/contact">Contact</a>
        </li>
        <li class="nav-item mx-2">
          <a class="nav-link" href="#">Settings</a>
        </li>
        <li class="nav-item mx-2">
          <a class="nav-link hideonpc" href="/login">Logout</a>
        </li>
      </ul>
      <form class="d-flex searchbar">
        <input
          class="form-control me-2"
          type="search"
          placeholder="Search"
          aria-label="Search"
        />
        <a href="#"
          ><i
            class="text-secondary fas fa-search fa-2x hideonmobile"
            title="Wishlist"
          ></i
        ></a>
      </form>
      <span class="text-secondary ms-4 hideonmobile">Hello</span>
      <div class="userDisplay ms-3 dropdown hideonmobile">
        <h6
          class="m-0 dropdown-toggle text-info"
          id="userDropdown"
          role="button"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          <%= userName %>
        </h6>
        <ul class="dropdown-menu" aria-labelledby="userDropdown">
          <li><a class="dropdown-item" href="/login"><%= logInOut %></a></li>
        </ul>
      </div>
      <div class="iconSettings d-flex ms-3">
        <a href="#" class="hideonmobile"
          ><i class="text-danger fas fa-heart" title="Wishlist"></i
        ></a>
        <a href="/cart" class="hideonmobile"
          ><i
            class="text-secondary fas fa-shopping-cart hideonmobile mx-3"
            title="Shopping Cart"
          ></i
        ></a>
      </div>
    </div>
  </div>
</nav>
